{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@lib/*": [
        "./src/lib/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@icons/*": [
        "./src/app/ui/components/icons/*"
      ],
      "@components/*": [
        "./src/app/ui/components/*"
      ],
      "@hooks/*": [
        "./src/app/hooks/*"
      ],
      "@utils/*": [
        "./src/app/utils/*"
      ],
      "@auth": [
        "./auth"
      ],
      "@services/*": [
        "./src/app/services/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "ecosystem.config.cjs"
  ],
  "exclude": [
    "node_modules"
  ]
}